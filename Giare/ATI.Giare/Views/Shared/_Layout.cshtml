@using ATI.Web.Models;
@using ATI.Web.Controllers;
@using ATI.Web.Helper;
@{
    Layout = null;
    var currentUSer = (BriefUser)ViewBag.CurrentUser;
    var commonInfo = (CommonInfo)ViewBag.CommonInfo;
    var context = (System.Web.HttpContextWrapper)ViewBag.Context;
}

<!DOCTYPE html>
<html class="">
<head>
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-startup-image" href="@commonInfo.Logo">
    <meta name="author" content="ATI JSC, info@fcn.vn">
    <meta charset="UTF-8" />
    <meta http-equiv="REFRESH" content="600" />
    <!--Title-->
    <!--Meta Tag-->
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keyword">
    <meta property="og:type" content="website" />
    <meta property="og:image" content="@ViewBag.Image" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta content="news" itemprop="genre" />
    <meta name="language" content="en,vn" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="@Html.Raw(commonInfo.Name)" itemprop="sourceOrganization" name="source" />
    @*<meta content="2014-01-01 08:00 + 07:00" itemprop="datePublished" name="pubdate" />
        <meta content="2014-01-01 08:00 + 07:00" itemprop="dateModified" name="lastmod" />
        <meta content="2014-01-01 09:00 + 07:00" itemprop="dateCreated" />*@
    <meta content="@commonInfo.Name" itemprop="headline" />
    <meta content="article" property="og:type" />
    <meta content="@ViewBag.Url" itemprop="url" property="og:url" />
    <meta content="@Html.Raw(commonInfo.Name)" property="og:site_name" />
    <meta content="@ViewBag.Image" itemprop="thumbnailUrl" property="og:image" />
    <meta property="fb:admins" content="100000373691948" />
    <meta property="og:description" content="@ViewBag.Description" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="@ViewBag.Image" />
    <meta property="og:title" content="@ViewBag.Title" />
    <!-- for Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="@ViewBag.Title" />
    <meta name="twitter:description" content="@ViewBag.Description" />
    <meta name="twitter:image" content="@ViewBag.Image" />
    <!-- Stylesheets -->
    @Styles.Render("~/Content/css/layout")
    <!-- Responsive -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/Content/responsive.css" rel="stylesheet" />
    <!--[if lt IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script><![endif]-->
    <!--[if lt IE 9]><script src="~/Scripts/respond.js"></script><![endif]-->
    <style type="text/css">
        .fancybox-margin {
            margin-right: 17px;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <div class="page-wrapper">
        <!-- Preloader -->
        <div class="preloader" style="display: none;"></div>

        <!-- Main Header-->
        <header class="main-header_professional">
            <!-- Header Top -->
            <div class="header-top-one">
                <div class="auto-container">
                    <div class="clearfix">
                        <!--Top Right-->
                        <div class="top-right top-links">
                            <ul class="clearfix">
                                <li> <i class="flaticon-telephone-1"></i>@commonInfo.Phone - @commonInfo.Mobile</li>
                                <li> <i class="flaticon-email-filled-closed-envelope"></i>@commonInfo.Email</li>
                                <li>
                                    @{
                                        var lang = ATIResourceManger.GetLanguageCurrent();

                                        if (Culture.Equals("en-US"))
                                        {
                                            <a href="/Home/ChangeLanguage/vi">
                                                <img src="~/Content/images/vietnam32.png" />
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="/Home/ChangeLanguage/en">
                                                <img src="~/Content/images/uk32.png" />
                                            </a>
                                        }
                                    }
                                </li>
                            </ul>
                        </div>

                    </div>

                </div>
            </div>

            <!-- Main Box -->
            <div class="main-box">
                <div class="auto-container">
                    <div class="outer-container clearfix">
                        <!--Logo Box-->
                        <div class="logo-box">
                            <div class="logo">
                                <a href="/">
                                    <img src="@commonInfo.Logo" style="height: 100px;margin-top: 4px;" />
                                </a>
                            </div>
                        </div>

                        <!--Nav Outer-->
                        <div class="nav-outer clearfix">
                            <!-- Main Menu -->
                            @{Html.RenderAction("MainMenu", "Home");}
                            <!-- Main Menu End-->
                        </div>
                        <!--Nav Outer End-->
                        <div class="search-box-outer">
                            <div class="dropdown">
                                <button class="search-box-btn dropdown-toggle" type="button" id="dropdownMenu3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="fa fa-search"></span>
                                </button>
                                <ul class="dropdown-menu pull-right search-panel" aria-labelledby="dropdownMenu3">
                                    <li class="panel-outer">
                                        <div class="form-container">
                                            @using (Html.BeginForm("SearchProduct", "Home", FormMethod.Get, new { role = "search", id = "searchform" }))
                                            {
                                                <div class="form-group">
                                                    <input type="search" name="key" id="key" value="" placeholder="@ATIResourceManger._managerResources.GetString("Search_Label", ATIResourceManger._culture)">
                                                    <button type="submit" class="search-btn"><span class="fa fa-search"></span></button>
                                                </div>
                                            }
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </header>
        <!--End Main Header -->
        @RenderBody()
        @{Html.RenderAction("Sponsors", "Home");}

        <!-- footer top area -->
        <section class="footer-top-area_professional">
            <div class="container">
                <div class="row">
                    <!--Start single item-->
                    <div class="col-md-4">
                        <div class="single-item">
                            <div class="iocn-holder">
                                <span class="flaticon-placeholder-1"></span>
                            </div>
                            <div class="text-holder">
                                <h3>
                                    @ATIResourceManger._managerResources.GetString("ContactAdd", ATIResourceManger._culture)
                                </h3>
                                <p>@commonInfo.Office</p>
                            </div>
                        </div>
                    </div>
                    <!--End single item-->
                    <!--Start single item-->
                    <div class="col-md-4">
                        <div class="single-item">
                            <div class="iocn-holder">
                                <span class="flaticon-technology"></span>
                            </div>
                            <div class="text-holder">
                                <h3>
                                    @ATIResourceManger._managerResources.GetString("ContactCode", ATIResourceManger._culture)
                                </h3>
                                <p>@ATIResourceManger._managerResources.GetString("Phone", ATIResourceManger._culture): @commonInfo.Phone<br>@ATIResourceManger._managerResources.GetString("Mobile", ATIResourceManger._culture): @commonInfo.Mobile</p>
                            </div>
                        </div>
                    </div>
                    <!--End single item-->
                    <!--Start single item-->
                    <div class="col-md-4">
                        <div class="single-item">
                            <div class="iocn-holder">
                                <span class="flaticon-mail"></span>
                            </div>
                            <div class="text-holder">
                                <h3>
                                    @ATIResourceManger._managerResources.GetString("SendMessage_Label", ATIResourceManger._culture)
                                </h3>
                                <p>
                                    Email: @commonInfo.Email
                                    @*<br>Website: www.cleaningservices.com*@
                                </p>
                            </div>
                        </div>
                    </div>
                    <!--End single item-->
                </div>
            </div>
        </section>

        <!--Footer Style  Two-->
        @{Html.RenderAction("Footer", "Home");}
        <!--End Footer Style Two-->
    </div>
    <!--End pagewrapper-->
    <!--Scroll to top-->
    <div class="scroll-to-top scroll-to-target" data-target=".main-header_professional"><span class="fa fa-long-arrow-up"></span></div>
    @Scripts.Render("~/Scripts/layout")

    @RenderSection("KnockOut", false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
        ga('create', 'UA-54293184-1', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>