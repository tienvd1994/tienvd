@using ATI.Web.Models;
@using ATI.Web.Resource;

@{
    var news = (News)ViewBag.News;
    var commonInfo = (CommonInfo)ViewBag.CommonInfo;
    ViewBag.Title = Html.Raw(news.Title);
    ViewBag.Description = Html.Raw(news.Summary);
    ViewBag.Keyword = Html.Raw(news.Summary);
    ViewBag.Url = news.SeoLink;
    ViewBag.Image = news.Image;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/blog.css" rel="stylesheet" />

<div class="breadcrumb-outer_professional">
    <div class="auto-container">
        <ul class="bread-crumb text-center">
            <li>
                <a href="/">
                    @ATIResource.HomeCode
                </a> <span class="fa fa-angle-right"></span>
            </li>
            <li>
                @ATIResource.EventCategory
                <span class="fa fa-angle-right"></span>
            </li>
            <li>@news.Title</li>
        </ul>
    </div>
</div>

<div class="sidebar-page-container_professional">
    <div class="auto-container">
        <div class="row clearfix">
            <!--Content Side-->
            <div class="content-side col-lg-9 col-md-9 col-sm-12 col-xs-12">
                <section class="blog-single">
                    <!--News Style One-->
                    <div class="news-style-one">
                        <div class="inner">
                            <div class="lower-box">
                                <div class="upper-content">
                                    <h3>@news.Title</h3>
                                    <ul class="meta-option">
                                        <li><a href="blog-single.html"><span class="icon fa fa-user"></span> @ATIResource.PostedBy_Label: @news.CreatedFullname</a></li>
                                        <li><a href="blog-single.html"><span class="icon fa fa-calendar"></span>@Convert.ToDateTime(news.CreatedTime).ToString("dd/MM/yyyy")</a></li>
                                    </ul>
                                </div>
                                <div>
                                    @Html.Raw(news.Content)
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <!--Sidebar-->
            <div class="sidebar-side col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <aside class="sidebar">
                    <div class="sidebar-inner">
                        <div class="sidebar-widget categories">
                            <div class="sidebar-title">
                                <h3>
                                    @ATIResource.CateNewsOther_Label
                                </h3>
                            </div>
                            <ul class="cat-list">
                                @{
                                    foreach (var item in (List<CateNew>)ViewBag.CateSolutionOther)
                                    {
                                        <li><a href="/tin-tuc/@item.SeoLink" class="clearfix">@item.Name</a></li>
                                    }
                                }
                            </ul>
                        </div>
                        <!-- Popular Posts -->
                        <div class="sidebar-widget popular-posts">
                            <div class="sidebar-title">
                                <h3>
                                    @ATIResource.MorePosts_Label
                                </h3>
                            </div>
                            @{
                                var listNews = (List<News>)ViewBag.TopNews;

                                foreach (var item in listNews)
                                {
                                    <article class="post">
                                        <figure class="post-thumb">
                                            <a href="/bai-viet/@item.SeoLink">
                                                <img src="@item.Image" alt="@item.Title">
                                            </a>
                                        </figure>
                                        <h4><a href="/bai-viet/@item.SeoLink">@item.Title</a></h4>
                                        <div class="post-info"><span class="fa fa-calendar"></span>@Convert.ToDateTime(item.PostTime).ToString("dd/MM/yyyy")</div>
                                    </article>
                                }
                            }
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</div>