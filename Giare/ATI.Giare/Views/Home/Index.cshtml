<!--default Section One-->
<section class="default-section">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-md-12 col-sm-12">
                <div class="left-column">
                    <div class="content">
                        <!--Sec Title-->
                        <div class="sec-title centered">
                            <h2>
                                @ATIResourceManger._managerResources.GetString("IntroductionCode", ATIResourceManger._culture)
                            </h2>
                            <div class="separator"></div>
                        </div>
                        <div class="text">
                            @{
                                var introduce = (Introduce)ViewBag.AboutHomePage;

                                if (introduce != null)
                                {
                                    @Html.Raw(introduce.Content)
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--default Section One-->
<!--Services Section-->
<section class="services-section_professional" @*style="background-image:url(../../Content/images/background/parallax4.jpg);"*@>
    <div class="auto-container">
        <!--Sec Title-->
        <div class="sec-title light centered">
            <h2>
                @ATIResourceManger._managerResources.GetString("ServiceCode", ATIResourceManger._culture)
            </h2>
            <div class="separator"></div>
        </div>
        <div class="row clearfix">
            <!--Services Style Two-->

            @{
                foreach (var item in (List<Partner>)ViewBag.Services)
                {
                    <div class="services-style-two col-md-4 col-sm-6 col-xs-12">
                        <div class="inner hover-style1 hvr-float-shadow">
                            <figure class="image-box hover-style1-img">
                                <img src="@item.Image" />
                                <div class="hover-style1-view">
                                    <a class="link-box" href="/dich-vu/@item.SeoLink"><span class="fa fa-link"></span></a>
                                </div>
                            </figure>
                            <div class="lower-box">
                                <h3><a href="/dich-vu/@item.SeoLink">@item.Name</a></h3>
                                <div class="text">
                                    @item.Summary
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        @*<div class="text-center">
                <a href="http://html.tonatheme.com/2017/Professional/index.html#" class="theme-btn btn-style-one">View all</a>
            </div>*@

    </div>
</section>
<!--End Services Section-->
<!-- project_professional Section-->
<section class="project_professional">
    <div class="auto-container">
        <!--Sec Title-->
        <div class="sec-title centered">
            <h2>
                @ATIResourceManger._managerResources.GetString("ProductCode", ATIResourceManger._culture)
            </h2>
            <div class="separator"></div>
        </div>
        @{
            var list = (CategoryAndProductViewModel)ViewBag.ListCateAndProduct;
            //var first = true;

            <ul class="post-filter text-center list-inline">
                <li class="active" data-filter=".default-portfolio-item">
                    <span>
                        @ATIResourceManger._managerResources.GetString("ViewAll_Label", ATIResourceManger._culture)
                    </span>
                </li>
                @foreach (var category in list.Categories)
                {
                    <li data-filter=".@category.CateId">
                        <span>@category.CategoryName</span>
                    </li>
                }
            </ul>
            <div class="row clearfix masonary-layout filter-layout">

                @foreach (var product in list.Products)
                {
                <!--Default Portfolio Item-->
                    <div class="default-portfolio-item @product.CateId col-md-4 col-sm-6 col-xs-12">
                        <div class="inner hover-style1">
                            <figure class="hover-style1-img">
                                <img src="@product.Image" alt="image">
                                <div class="hover-style1-view">
                                    <a class="lightbox-image option-btn" title="@product.Name" data-fancybox-group="example-gallery" href="@product.Image">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                </div>
                            </figure>
                            <div class="hover-style1-title title-style-1">
                                <h3><a href="/chi-tiet/@product.SeoLink">@product.Name</a></h3>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
<!--End project_professional Section-->
<!--News Section-->
<section class="news-section_professional">
    <div class="auto-container">
        <!--Sec Title-->
        <div class="sec-title centered">
            <h2>
                @ATIResourceManger._managerResources.GetString("NewsLastest_Label", ATIResourceManger._culture)
            </h2>
            <div class="separator"></div>
        </div>
        <div class="row clearfix">
            @{
                foreach (var item in (List<News>)ViewBag.TopNews)
                {
                    <div class="news-style-one col-md-4 col-sm-6 col-xs-12">
                        <div class="inner">
                            <div class="image">
                                <a href="/bai-viet/@item.SeoLink">
                                    <img src="@item.Image" />
                                </a>
                            </div>
                            <div class="lower-box">
                                <div class="upper-content">
                                    <h3>
                                        <a href="/bai-viet/@item.SeoLink">@item.Title</a>
                                    </h3>
                                </div>
                                <div class="text">
                                    @item.Summary
                                </div>
                                <ul class="meta-option clearfix">
                                    <li class="pull-left">
                                        <a href="/bai-viet/@item.SeoLink">
                                            <span class="icon fa fa-clock-o"></span> @Convert.ToDateTime(item.CreatedTime).ToString("dd/MM/yyyy")
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
<!--End News Section-->