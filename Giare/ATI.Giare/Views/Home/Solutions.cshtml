<div class="breadcrumb-outer_professional">
    <div class="auto-container">
        <ul class="bread-crumb text-center">
            <li>
                <a href="/">
                    @ATIResourceManger._managerResources.GetString("HomeCode", ATIResourceManger._culture)
                </a> <span class="fa fa-angle-right"></span>
            </li>
            <li>
                @ATIResourceManger._managerResources.GetString("Solutions_Label", ATIResourceManger._culture)
            </li>
        </ul>
    </div>
</div>

<section class="news-section_professional">
    <div class="auto-container">
        <div class="row clearfix">
            @{
                foreach (var item in Model.Items)
                {
                    <div class="news-style-one col-md-4 col-sm-6 col-xs-12">
                        <div class="inner">
                            <div class="image">
                                <a href="/giai-phap-chi-tiet/@item.SeoLink">
                                    <img src="@item.Image" alt="@item.Title">
                                </a>
                            </div>
                            <div class="lower-box">
                                <div class="upper-content">
                                    <h3><a href="/giai-phap-chi-tiet/@item.SeoLink">@item.Title</a></h3>
                                </div>
                                <div class="text">@item.Summary</div>
                                <ul class="meta-option clearfix">
                                    <li class="pull-left">
                                        <a href="javascript:void(0)">
                                            <span class="icon fa fa-clock-o"></span> @Convert.ToDateTime(item.PostTime).ToString("dd/MM/yyyy")
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Styled Pagination -->
        @if (Model.Pager.EndPage > 1)
        {
            var url = HttpContext.Current.Request.Url.AbsolutePath;
            var countSlash = url.Count(m => m == '/');

            if (countSlash > 2)
            {
                var index = url.LastIndexOf('/');
                url = url.Substring(0, index);
            }

            <div class="styled-pagination text-center">
                <ul class="clearfix">
                    @if (Model.Pager.CurrentPage > 1)
                    {
                        <li>
                            <a class="prev" href="@url">
                                <span class="fa fa-angle-left"></span>
                            </a>
                        </li>
                    }
                    @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                    {
                        <li>
                            <a class="@(page == Model.Pager.CurrentPage ? "active" : "")" href="@url/@page">@page</a>
                        </li>
                    }
                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                    {
                        <li><a class="next" href="@url/@Model.Pager.TotalPages"><span class="fa fa-angle-right"></span></a></li>
                    }
                </ul>
            </div>
        }
    </div>
</section>
