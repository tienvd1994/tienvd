@using ATI.Web.Models;
@using ATI.Web.Helper;

@{
    var partner = (Partner)ViewBag.Partner;
    var commonInfo = (CommonInfo)ViewBag.CommonInfo;
    ViewBag.Title = Html.Raw(string.Concat(partner.Name, " | ", commonInfo.Name));
    ViewBag.Description = Html.Raw(string.Concat(partner.Name, " | ", commonInfo.Name));
    ViewBag.Keyword = Html.Raw(string.Concat(partner.Name, " | ", commonInfo.Name));
    ViewBag.Url = partner.SeoLink;
    ViewBag.Image = partner.Image;
}

