<div class="breadcrumb-outer_professional">
    <div class="auto-container">
        <ul class="bread-crumb text-center">
            <li>
                <a href="/">
                    @ATIResourceManger._managerResources.GetString("HomeCode", ATIResourceManger._culture)
                </a> <span class="fa fa-angle-right"></span>
            </li>
            <li>
                <a href="/dich-vu">
                    @ATIResourceManger._managerResources.GetString("ServiceCode", ATIResourceManger._culture)
                </a> <span class="fa fa-angle-right"></span>
            </li>
            <li>@partner.Name</li>
        </ul>
    </div>
</div>

<div class="sidebar-page-container_professional">
    <div class="auto-container">
        <div class="row clearfix">
            <!--Content Side-->
            <div class="content-side col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <section class="blog-single">
                    <!--News Style One-->
                    <div class="news-style-one">
                        <div class="inner">
                            <div class="lower-box">
                                <div class="upper-content">
                                    <h3>@partner.Name</h3>
                                    <ul class="meta-option">
                                        <li><a href="javascript:void(0)"><span class="icon fa fa-user"></span> Đăng bởi: @(string.IsNullOrEmpty(partner.CreatedFullname) ? "admin" : partner.CreatedFullname )
                                        <li><a href="javascript:void(0)"><span class="icon fa fa-calendar"></span>@Convert.ToDateTime(partner.CreatedDate).ToString("dd/MM/yyyy")</a></li>
                                    </ul>
                                </div>
                                <div>
                                    @Html.Raw(partner.Content)
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <!--Sidebar-->
            <div class="sidebar-side col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <aside class="sidebar">
                    <div class="sidebar-inner">
                        <!-- Popular Posts -->
                        <div class="sidebar-widget popular-posts">
                            <div class="sidebar-title">
                                <h3>Dịch vụ khác</h3>
                            </div>
                            @{
                                var partners = (List<Partner>)ViewBag.PartnersOther;

                                foreach (var item in partners)
                                {
                                    <article class="post">
                                        <figure class="post-thumb">
                                            <a href="/chi-tiet-dich-vu/@item.SeoLink">
                                                <img src="@item.Image" alt="@item.Name">
                                            </a>
                                        </figure>
                                        <h4><a href="/chi-tiet-dich-vu/@item.SeoLink">@item.Name</a></h4>
                                        <div class="post-info"><span class="fa fa-calendar"></span>@Convert.ToDateTime(item.CreatedDate).ToString("dd/MM/yyyy")</div>
                                    </article>
                                }
                            }
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</div>